/* 头部区域 */
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  height: 60rpx;
  width: 60rpx;
}
.videoContainer .header .search {
  border: 1rpx solid red;
  flex: 1;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
}

/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 70rpx;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navItem .active {
  border-bottom: 1rpx solid #d43c33;
}

/* 视频列表 */
.videoScroll {
  height: calc(100vh - 152rpx);
}

.videoItem {
  padding: 0 3%;
}

.videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

/* 替换video的图片 */
.videoItem image {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
